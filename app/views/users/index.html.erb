<% @users.each do |user| %>
  <div class='users-page'>
     <div class='image-div'>
        <img src="<%= user.photo %>" alt="avatar" width="100" height="100"/>

    </div>
    <div class='single_user'>
  <%= link_to user_path(user.id) do %>
    <h2>
        <%= user.name %>
    </h2>
  <% end %>
   <p class='posts'>
    <%= user.posts_counter %> posts
    </p>
    </div>
  </div>
<% end %>